if user
    h1 Welcome #{user.firstname} #{user.lastname}!
else
    p Please log in.
    a(href="/login") Log in

for post in posts
    article
        h1 #{post.title}
        p #{post.score}
        form(method="post", action="/api/post/" + post.id + "/upvote")
            button(type="submit") upvote
        form(method="post", action="/api/post/" + post.id + "/downvote")
            button(type="submit") downvote


